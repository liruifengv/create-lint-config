{
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs --fix",
    "format": "prettier --write .",
    "style": "stylelint \"**/*.(scss|css|less)\" --fix"
