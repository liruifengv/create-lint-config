{
  "name": "create-lint-config",
  "version": "0.2.0",
  "description": "An easy way to create all lint configuration",
  "type": "module",
  "bin": {
    "create-lint-config": "./dist/create-lint-config.cjs"
  },
  "files": [
    "template",
    "dist"
  ],
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "lint": "eslint src/* --fix",
    "lint:ci": "eslint src/*",
    "format": "prettier --write .",
    "format:ci": "prettier --check  .",
    "changeset": "changeset",
    "version": "changeset version && pnpm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liruifengv/create-lint-config.git"
  },
  "keywords": [
    "eslint",
    "stylelint",
    "commitlint",
    "husky",
    "config"
  ],
  "author": "liruifengv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liruifengv/create-lint-config/issues"
  },
  "homepage": "https://github.com/liruifengv/create-lint-config#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "esbuild": "^0.17.8",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@astrojs/cli-kit": "^0.2.3",
    "arg": "^5.0.2",
    "execa": "^7.0.0"
  }
}
